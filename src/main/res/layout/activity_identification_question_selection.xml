<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Identification_Question_selection">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Deck and the Answer"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/textViewSelectDeck"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Select Deck" />

        <Spinner
            android:id="@+id/spinnerDeck"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints="Deck Name"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="193dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/textViewCardAnswer"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Select the Answer Card" />

        <Spinner
            android:id="@+id/spinnerCard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints="Deck Name"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="193dp" />

    </LinearLayout>

    <Button
        android:layout_margin="8dp"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create question"
        android:onClick="goto_identification_activity"/>


</LinearLayout>