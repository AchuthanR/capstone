<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LanguageTherapyAssistanceForAutisticChildren" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryContainer">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_900</item>
        <item name="colorSecondaryContainer">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/blue_grey_50</item>
        <item name="colorOutline">@color/grey_900</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.LanguageTherapyAssistanceForAutisticChildren.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>